{% extends "PPMakerBackBundle::layout.html.twig" %}

{% block body_content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="page-header">
        <h1>{{ 'config.add.title'|trans|capitalize }}
            <div class="btn-group pull-right">
                <a class="btn btn-danger" href="{{ path('config_list') }}">
                    <i class="fa fa-reply"></i> {{ 'btn.back'|trans|capitalize }}
                </a>
                <button type="submit" id="ppmaker_backbundle_config_save" name="ppmaker_backbundle_config[save]" class="btn btn-success pull-right">
                    <i class="fa fa-check"></i> {{ 'btn.save'|trans|capitalize }}
                </button>
            </div>
        </h1>
    </div>

    <div class="form-group">
        <label for="ppmaker_backbundle_config_bundleName" class="col-sm-3 required">{{ 'bundle.name'|trans|capitalize }}</label>
        <div class="col-sm-9">
            <input type="text" id="ppmaker_backbundle_config_bundleName" class="form-control" name="ppmaker_backbundle_config[bundleName]" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="ppmaker_backbundle_config_bundleIcon" class="col-sm-3 required">{{ 'bundle.icon'|trans|capitalize }}</label>
        <div class="col-sm-9">
            <input type="text" id="ppmaker_backbundle_config_bundleIcon" class="form-control" name="ppmaker_backbundle_config[bundleIcon]" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="ppmaker_backbundle_config_bundleFront" class="col-sm-3 required">{{ 'bundle.front'|trans|capitalize }}</label>
        <div class="col-sm-9">
            <input type="text" id="ppmaker_backbundle_config_bundleFront" class="form-control" name="ppmaker_backbundle_config[bundleFront]" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="ppmaker_backbundle_config_bundleBack" class="col-sm-3 required">{{ 'bundle.back'|trans|capitalize }}</label>
        <div class="col-sm-9">
            <input type="text" id="ppmaker_backbundle_config_bundleBack" class="form-control" name="ppmaker_backbundle_config[bundleBack]" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="ppmaker_backbundle_config_bundleNavOrder" class="col-sm-3 required">{{ 'bundle.navOrder'|trans|capitalize }}</label>
        <div class="col-sm-9">
            <input type="text" id="ppmaker_backbundle_config_bundleNavOrder" class="form-control" name="ppmaker_backbundle_config[bundleNavOrder]" required="required">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label for="ppmaker_backbundle_config_bundleActif" class="required">
                    <input type="checkbox" value="1" id="ppmaker_backbundle_config_bundleActif" name="ppmaker_backbundle_config[bundleActif]"> {{ 'bundle.actif'|trans|capitalize }}
                </label>
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}