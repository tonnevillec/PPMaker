<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ brand_name }}{% block title %} - ADMINISTRATION{% endblock %}</title>

    {% stylesheets filter='cssrewrite'
    '@PPMakerFrontBundle/Resources/public/css/*'
    '@PPMakerBackBundle/Resources/public/css/*'%}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block body_class %}back{% endblock %}">
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar" id="navigation">
                {% include "PPMakerBackBundle:Admin:navbar.html.twig" %}
            </div>

            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                {% block body_content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% javascripts
'@PPMakerFrontBundle/Resources/public/js/*' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block others_js %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="offcanvas"]').click(function () {
                $("#navigation").toggleClass("hidden-xs");
            });
        });
    </script>
{% endblock %}
</body>
</html>